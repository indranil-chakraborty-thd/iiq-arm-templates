{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        "instance_name": {
            "defaultValue": "[concat(resourceGroup().name, '-sql-managed-instance')]",
            "type": "String"
        },
        "vNetName": {
            "type": "string",
            "defaultValue": "[concat(resourceGroup().name, '-iiq-vnet')]",
            "metadata": {
                "description": "The name of the VNet to which the NIC for the VMs will be attached to."
            }
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "dbSubnet",
            "metadata": {
                "description": "The name of the subnet of the VNet to which the NIC for the VMs will be attached to."
            }
        },
        "administratorLogin": {
            "type": "string",
            "metadata": {
                "description": "The name of the administrator for this managed instance"
            },
            "defaultValue": "sql-admin"
        }
    },
    "variables": {
        "vNetName": "[concat(resourceGroup().name, '-', parameters('VNetName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Sql/managedInstances",
            "apiVersion": "2018-06-01-preview",
            "name": "[parameters('instance_name')]",
            "location": "eastus",
            "sku": {
                "name": "GP_Gen5",
                "tier": "GeneralPurpose",
                "family": "Gen5",
                "capacity": 8
            },
            "properties": {
                "administratorLogin": "[parameters('administratorLogin')]",
                "subnetId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vNetName'), parameters('subnetName'))]",
                "licenseType": "BasePrice",
                "vCores": 2,
                "storageSizeInGB": 2176,
                "collation": "SQL_Latin1_General_CP1_CI_AS",
                "publicDataEndpointEnabled": false,
                "proxyOverride": "Proxy",
                "timezoneId": "UTC"
            }
        },
        {
            "type": "Microsoft.Sql/managedInstances/databases",
            "apiVersion": "2020-02-02-preview",
            "name": "[concat(parameters('instance_name'), '/identityiq')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/managedInstances', parameters('instance_name'))]"
            ],
            "properties": {
                "collation": "SQL_Latin1_General_CP1_CI_AS"
            }
        },
        {
            "type": "Microsoft.Sql/managedInstances/databases",
            "apiVersion": "2020-02-02-preview",
            "name": "[concat(parameters('instance_name'), '/identityiqPlugin')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/managedInstances', parameters('instance_name'))]"
            ],
            "properties": {
                "collation": "SQL_Latin1_General_CP1_CI_AS"
            }
        }
    ]
}
