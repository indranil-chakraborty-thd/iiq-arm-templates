{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceGroup": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the location for all resources."
            }
        },
        "VNetSettings": {
            "type": "object"
        }
    },
    "variables": {
        "vNetName": "[concat(parameters('resourceGroup'), '-', parameters('VNetSettings').VNetName)]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-11-01",
            "name": "[variables('vNetName')]",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('VNetSettings').VNetAddressPrefix]"
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-05-01",
            "name": "[concat(variables('vNetName'), '/', parameters('VNetSettings').subnets[copyIndex()].name)]",
            "copy": {
                "name": "subnetsCopy",
                "count": "[length(parameters('VNetSettings').subnets)]",
                "mode": "Parallel"
            },
            "properties": {
                "addressPrefix": "[parameters('VNetSettings').subnets[copyIndex()].addressPrefix]"                
            }
        }
    ]
}