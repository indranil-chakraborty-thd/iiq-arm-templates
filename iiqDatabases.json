{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "metadata": {
                "description": "A moniker for the environment. Effectively serves as a prefix for all resources deployed by these templates."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the location for all resources."
            }
        },
        "dbInstances": {
            "type": "array",
            "metadata": {
                "description": "Defines the IdentityIQ database names."
            }
        }
    },
    "variables": {
        "sqlServerName": "[concat(parameters('environment'), '-azure-sql-instance')]",
        "databaseEdition": "Basic",
        "databaseCollation": "SQL_Latin1_General_CP1_CI_AS",
        "databaseServiceObjectiveName": "Basic"
    },
    "resources": [        
        {
            "apiVersion": "2019-06-01-preview",
            "type": "Microsoft.Sql/servers/databases",
            "name": "[concat(variables('sqlServerName'), '/', parameters('dbInstances')[copyIndex()])]",
            "location": "[parameters('location')]",
            "tags": {
                "environment": "[parameters('environment')]"
            },
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 10
            },
            "copy": {
                "name": "dbInstancesCopy",
                "count": "[length(parameters('dbInstances'))]",
                "mode": "Parallel"
            },
            "properties": {
                "edition": "[variables('databaseEdition')]",
                "collation": "[variables('databaseCollation')]",
                "requestedServiceObjectiveName": "[variables('databaseServiceObjectiveName')]"
            },
            "resources": []
        }

    ]
}