{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "metadata": {
                "description": "Specifies a name for generating resource names."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the location for all resources."
            }
        },
        "transparentDataEncryption": {
            "type": "string",
            "allowedValues": [
                "Enabled",
                "Disabled"
            ],
            "defaultValue": "Enabled",
            "metadata": {
                "description": "Enable or disable Transparent Data Encryption (TDE) for the database."
            }
        }
    },
    "variables": {
        "sqlServerName": "[concat(parameters('environment'), '-azure-sql-instance')]",
        "identityiqDatabaseName": "identityiq",
        "identityiqPluginDatabaseName": "identityiqPlugin",
        "databaseEdition": "Basic",
        "databaseCollation": "SQL_Latin1_General_CP1_CI_AS",
        "databaseServiceObjectiveName": "Basic"
    },
    "resources": [
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2019-06-01-preview",
            "name": "[variables('sqlServerName')]",
            "location": "[parameters('location')]",
            "properties": {},
            "resources": [
                {
                    "name": "[variables('identityiqDatabaseName')]",
                    "type": "databases",
                    "apiVersion": "2019-06-01-preview",
                    "location": "[parameters('location')]",
                    "tags": {
                        "environment": "[parameters('environment')]"
                    },
                    "sku": {
                        "name": "Standard",
                        "tier": "Standard",
                        "capacity": 10
                    },
                    "properties": {
                        "edition": "[variables('databaseEdition')]",
                        "collation": "[variables('databaseCollation')]",
                        "requestedServiceObjectiveName": "[variables('databaseServiceObjectiveName')]"
                    },
                    "dependsOn": [
                        "[variables('sqlServerName')]"
                    ],
                    "resources": [
                        {
                            "comments": "Transparent Data Encryption",
                            "name": "current",
                            "type": "transparentDataEncryption",
                            "apiVersion": "2014-04-01",
                            "properties": {
                                "status": "[parameters('transparentDataEncryption')]"
                            },
                            "dependsOn": [
                                "[variables('identityiqDatabaseName')]"
                            ]
                        }
                    ]
                },
                {
                    "name": "[variables('identityiqPluginDatabaseName')]",
                    "type": "databases",
                    "apiVersion": "2019-06-01-preview",
                    "location": "[parameters('location')]",
                    "tags": {
                        "environment": "[parameters('environment')]"
                    },
                    "sku": {
                        "name": "Standard",
                        "tier": "Standard",
                        "capacity": 10
                    },
                    "properties": {
                        "edition": "[variables('databaseEdition')]",
                        "collation": "[variables('databaseCollation')]",
                        "requestedServiceObjectiveName": "[variables('databaseServiceObjectiveName')]"
                    },
                    "dependsOn": [
                        "[variables('sqlServerName')]"
                    ],
                    "resources": [
                        {
                            "comments": "Transparent Data Encryption",
                            "name": "current",
                            "type": "transparentDataEncryption",
                            "apiVersion": "2014-04-01",
                            "properties": {
                                "status": "[parameters('transparentDataEncryption')]"
                            },
                            "dependsOn": [
                                "[variables('identityiqPluginDatabaseName')]"
                            ]
                        }
                    ]
                }
            ]
        }

    ]
}