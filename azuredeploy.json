{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

    },
    "variables": {
        "templateBaseUrl": "https://raw.githubusercontent.com/indranil-chakraborty-thd/iiq-arm-templates/arm-template-tutorial-7/",
        "keyVaultTemplateUrl": "[uri(variables('templateBaseUrl'), 'deployKeyVault.json')]",
        "keyVaultParametersUrl": "[uri(variables('templateBaseUrl'), 'deployKeyVault.parameters.json')]",
        "networkingTemplateUrl": "[uri(variables('templateBaseUrl'), 'networking.json')]",
        "networkingParametersUrl": "[uri(variables('templateBaseUrl'), 'networking.parameters.json')]",
        "azureSqlDatabaseTemplateUrl": "[uri(variables('templateBaseUrl'), 'azureSqlDatabase.json')]",
        "azureSqlDatabaseParameterUrl": "[uri(variables('templateBaseUrl'), 'azureSqlDatabase.parameters.json')]",
        "iiqDatabasesTemplateUrl": "[uri(variables('templateBaseUrl'), 'iiqDatabases.json')]",
        "iiqDatabasesParametersUrl": "[uri(variables('templateBaseUrl'), 'iiqDatabases.parameters.json')]",
        "vmTemplateUrl": "[uri(variables('templateBaseUrl'), 'virtualMachine.json')]",
        "vmParametersUrl": "[uri(variables('templateBaseUrl'), 'virtualMachine.parameters.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "keyVaultTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('keyVaultTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('keyVaultParametersUrl')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "networkingTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkingTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('networkingParametersUrl')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "azureSqlDatabaseTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('azureSqlDatabaseTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('azureSqlDatabaseParameterUrl')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "iiqDatabasesTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('iiqDatabasesTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('iiqDatabasesParametersUrl')]",
                    "contentVersion": "1.0.0.0"
                }
            },
            "dependsOn": [
                "azureSqlDatabaseTemplate"
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "vmTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('vmParametersUrl')]",
                    "contentVersion": "1.0.0.0"
                }
            },
            "dependsOn": [
                "networkingTemplate"
            ]
        }
    ]
}