{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

    },
    "variables": {
        "templateBaseUrl": "https://raw.githubusercontent.com/indranil-chakraborty-thd/iiq-arm-templates/arm-template-tutorial-7/",
        "keyVaultTemplateUrl": "[uri(variables('templateBaseUrl'), 'deployKeyVault.json')]",
        "networkingTemplateUrl": "[uri(variables('templateBaseUrl'), 'networking.json')]",
        "networkingParametersUrl": "[uri(variables('templateBaseUrl'), 'networking.parameters.json')]",
        "azureSqlDatabaseTemplateUrl": "[uri(variables('templateBaseUrl'), 'azureSqlDatabase.json')]",
        "iiqDatabasesTemplateUrl": "[uri(variables('templateBaseUrl'), 'iiqDatabases.json')]",
        "bastionTemplateUrl": "[uri(variables('templateBaseUrl'), 'bastion.json')]",
        "vmTemplateUrl": "[uri(variables('templateBaseUrl'), 'virtualMachine.json')]",
        "vmParametersUrl": "[uri(variables('templateBaseUrl'), 'virtualMachine.parameters.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "keyVaultTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('keyVaultTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vaultName": {
                        "value": "ixc5ffg-vault"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "networkingTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkingTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('networkingParametersUrl')]",
                    "contentVersion": "1.0.0.0"
                }
            },
            "dependsOn": [ "keyVaultTemplate" ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "azureSqlDatabaseTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('azureSqlDatabaseTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "environment": {
                        "value": "sandbox"
                    },
                    "administratorLoginPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[reference('keyVaultTemplate').outputs.keyVaultResourceId.value]"
                            },
                            "secretName": "sqlAdministratorLoginPassword"
                        }
                    },
                    "appSubnetId": {
                        "value": "[reference('networkingTemplate').outputs.appSubnetId.value]"
                    }
                },
                "dependsOn": [ "keyVaultTemplate", "networkingTemplate" ]
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "iiqDatabasesTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('iiqDatabasesTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "environment": {
                        "value": "sandbox"
                    },
                    "dbInstances": {
                        "value": [
                            "identityiq",
                            "identityiqPlugin"
                        ]
                    }
                },
                "dependsOn": [ "azureSqlDatabaseTemplate" ]
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "bastionTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('bastionTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "bastionHostName": {
                    "type": "string"
                },
                "bastionSubnetId": {
                    "value": "[reference('networkingTemplate').outputs.bastionSubnetId.value]"
                },
                "publicIpAddressName": {
                    "type": "string"
                }
            },
            "dependsOn": [
                "networkingTemplate"
            ]
        }
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "vmTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('vmParametersUrl')]",
                    "contentVersion": "1.0.0.0"
                }
            },
            "dependsOn": [
                "networkingTemplate"
            ]
        }
    ]
}